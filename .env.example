# 
POSTGRES_USER=grafana
POSTGRES_PASSWORD=grafana
POSTGRES_DB=grafana

# Grafana Configuration
GRAFANA_PASSWORD=your_secure_admin_password
GRAFANA_USER=admin
GRAFANA_ROOT_URL=http://localhost:3000
GRAFANA_DOMAIN=localhost
GRAFANA_LOG_LEVEL=info

# SMTP Configuration for Email Notifications (Optional)
GRAFANA_SMTP_ENABLED=false
GRAFANA_SMTP_HOST=smtp.gmail.com:587
GRAFANA_SMTP_USER=your_email@gmail.com
GRAFANA_SMTP_PASSWORD=your_app_password
GRAFANA_SMTP_FROM=grafana@yourdomain.com

# Neon PostgreSQL Database 1 (Production)
NEON_DB1_NAME=Neon-Production
NEON_DB1_HOST=your-project-name1.neon.tech
NEON_DB1_PORT=5432
NEON_DB1_DATABASE=neondb
NEON_DB1_USER=your_neon_username1
NEON_DB1_PASSWORD=your_neon_password1

# Neon PostgreSQL Database 2 (Staging)
NEON_DB2_NAME=Neon-Staging
NEON_DB2_HOST=your-project-name2.neon.tech
NEON_DB2_PORT=5432
NEON_DB2_DATABASE=neondb
NEON_DB2_USER=your_neon_username2
NEON_DB2_PASSWORD=your_neon_password2

# Neon PostgreSQL Database 3 (Analytics)
NEON_DB3_NAME=Neon-Analytics
NEON_DB3_HOST=your-project-name3.neon.tech
NEON_DB3_PORT=5432
NEON_DB3_DATABASE=neondb
NEON_DB3_USER=your_neon_username3
NEON_DB3_PASSWORD=your_neon_password3

# Optional: Use external database for Grafana's own data (instead of SQLite)
# Uncomment and configure if you want to store Grafana's metadata in PostgreSQL
# GRAFANA_DB_TYPE=postgres
